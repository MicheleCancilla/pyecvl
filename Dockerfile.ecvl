FROM crs4/cmake:3.14

RUN \
    export DEBIAN_FRONTEND=noninteractive \
 && apt-get update -y -q \
 && apt-get install -y --no-install-recommends \
        libopencv-dev \
        libwxgtk3.0-dev \
 && apt-get clean


COPY third_party/ecvl /ecvl
WORKDIR /ecvl
RUN mkdir build && \
    cd build && \
    cmake -DECVL_BUILD_GUI=OFF .. && \
    make
